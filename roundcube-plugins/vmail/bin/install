#!/usr/bin/env python

import shutil

if __name__ == '__main__':
    shutil.copy('/etc/sudoers', '/etc/sudoers.bak')
    shutil.copy('getmaildirsize', '/usr/local/bin/getmaildirsize')

    fp = open('/etc/sudoers', 'a')
    fp.write('\nwww-data ALL = (vmail) NOPASSWD: /usr/local/bin/getmaildirsize\n')
    fp.close()
